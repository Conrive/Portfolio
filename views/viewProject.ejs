<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Просмотр проекта</title>
    <link href="/css/output.css" rel="stylesheet">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #f0f0f0;
        }
        #canvas {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
        }
    </style>
</head>
<body>  <%- include('partials/nav') %>
<div id="canvas"></div>

<script src="/editor.js"></script>
<script>
    // Переопределяем функции редактирования, чтобы они не срабатывали
    window.makeDraggable = () => {};
    window.selectElement = () => {};
    window.updateObjectTree = () => {};

    // Загружаем канвас
    window.addEventListener('DOMContentLoaded', () => {
        loadCanvas().then(() => {
            // После загрузки — отключаем редактируемость
            const allElements = document.querySelectorAll('#canvas [contenteditable]');
            allElements.forEach(el => el.contentEditable = false);
        });
    });
</script>
</body>
</html>