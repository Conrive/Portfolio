<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/output.css" rel="stylesheet">
  <title><%= title %></title>
</head>
<body class="bg-gray-100"> <%- include('partials/nav') %>
<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold text-red-800"><%= title %></h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-6">
      <% projects.forEach(project => { %><div class="bg-white rounded-lg shadow p-4 hover:shadow-lg transition-all project-card" data-id="<%= project.id %>" style='background-image: url("<%= project.cover %>"); background-size: cover; background-position: center;'>
          <div class="inset-0 bg-white/85 p-8 flex flex-col justify-between">
              <h2 class="text-xl font-semibold mb-2"><%= project.title %></h2>
              <p class="text-sm text-gray-600"><%= project.description || 'No description provided.' %></p>
          </div>
      </div>
      <% }) %>
  </div>
</div>
</body>
<script>
    document.querySelectorAll('.project-card').forEach(card => {
        card.addEventListener('dblclick', () => {
            const projectId = card.dataset.id;
            window.location.href = `/project/${projectId}/view`;
        });
    });
</script>
</html>
